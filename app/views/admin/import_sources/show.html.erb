<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @import_source %>

    <%= link_to 'Edit this import_source', edit_admin_import_source_path(@import_source), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this import_source', admin_import_source_path(@import_source), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to import_sources', admin_import_sources_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>

